<div class="panel panel-default">
    
    <div class="panel-heading">
        <h1>メッセージ一覧</h1>
    </div>

    <div class="panel-body">
        <% @messages.each do |message| %>
          <span class="label label-info"><%= message.name %></span>
          <pre><%= message.body %></pre>
          <br>
        <% end %>
    </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
<div class="form-group">
    <%= f.label :name, "名前", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :name, size: 40, maxlength: 30, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
</div>

<div class="form-group">
    <%= f.label :body, "内容", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_area :body, size:40, maxlength: 30, rows:6, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
</div>
  
<%= f.submit "送信", class: "btn btn-default btn-sm" %>
<% end %>


<%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                <li>
                    <%= full_message %>
                </li>
                <% end %>
            </ul>
        </div>
        <% end %>
        名前：
        <%= f.text_field :name %>
        
        内容：
        <%= f.text_field :body %>
        <%= f.submit class: "btn btn-sm btn-primary" %>
        
<% end %>